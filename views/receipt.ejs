<!-- views/receipt.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Receipt</title>
</head>

<body>
  <h1>Receipt</h1>
  <p><strong>Name:</strong> <%= receiptData.name %></p>
  <p><strong>Address:</strong> <%= receiptData.address %></p>
  <p><strong>City:</strong> <%= receiptData.city %></p>
  <p><strong>Province:</strong> <%= receiptData.province %></p>
  <p><strong>Phone:</strong> <%= receiptData.phone %></p>
  <p><strong>Email:</strong> <%= receiptData.email %></p>
  <hr>
  <p><strong>Products:</strong></p>
  <ul>
    <% if (receiptData.product1Quantity > 0) { %>
      <li><%= receiptData.product1 %> - Quantity: <%= receiptData.product1Quantity %>, Price: $<%= (receiptData.product1Price * receiptData.product1Quantity).toFixed(2) %></li>
    <% } %>
    <% if (receiptData.product2Quantity > 0) { %>
      <li><%= receiptData.product2 %> - Quantity: <%= receiptData.product2Quantity %>, Price: $<%= (receiptData.product2Price * receiptData.product2Quantity).toFixed(2) %></li>
    <% } %>
  </ul>
  <p><strong>Total Amount:</strong> $<%= receiptData.totalAmount.toFixed(2) %></p>
  <p><strong>Sales Tax:</strong> $<%= receiptData.salesTax.toFixed(2) %></p>
  <p><strong>Grand Total:</strong> $<%= (receiptData.totalAmount + receiptData.salesTax).toFixed(2) %></p>
</body>

</html>
